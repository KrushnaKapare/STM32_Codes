/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{
  HAL_Init();
  SystemClock_Config();

  // Initialize Peripherals
  MX_GPIO_Init();
  MX_USART3_UART_Init(); // Ensure this matches your board's USB UART

  // --- MANUALLY CONFIGURE TIM4 AND GPIO PB6 HERE ---
  // This replaces MX_TIM4_Init to ensure settings are correct for the test
  __HAL_RCC_TIM4_CLK_ENABLE();
  __HAL_RCC_GPIOB_CLK_ENABLE();

  // 1. Configure PB6 as Timer Input (Alternate Function)
  GPIO_InitTypeDef GPIO_InitStruct = {0};
  GPIO_InitStruct.Pin = GPIO_PIN_6;
  GPIO_InitStruct.Mode = GPIO_MODE_AF_PP; // Push-Pull
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  GPIO_InitStruct.Alternate = GPIO_AF2_TIM4; // Connect PB6 to TIM4
  HAL_GPIO_Init(GPIOB, &GPIO_InitStruct);

  // 2. Configure Timer 4
  htim4.Instance = TIM4;
  htim4.Init.Prescaler = 12 - 1; // 12MHz / 12 = 1MHz (1us tick) - ADJUST BASED ON YOUR CLOCK
  htim4.Init.CounterMode = TIM_COUNTERMODE_UP;
  htim4.Init.Period = 0xFFFF; // Max value
  htim4.Init.ClockDivision = TIM_CLOCKDIVISION_DIV1;
  HAL_TIM_IC_Init(&htim4);

  // 3. Configure Input Capture Channel 1
  TIM_IC_InitTypeDef sConfigIC = {0};
  sConfigIC.ICPolarity = TIM_INPUTCHANNELPOLARITY_RISING;
  sConfigIC.ICSelection = TIM_ICSELECTION_DIRECTTI;
  sConfigIC.ICPrescaler = TIM_ICPSC_DIV1;
  sConfigIC.ICFilter = 0;
  HAL_TIM_IC_ConfigChannel(&htim4, &sConfigIC, TIM_CHANNEL_1);

  // --- END MANUAL CONFIG ---

  char uart_msg[100];
  uint32_t val1 = 0;
  uint32_t val2 = 0;
  uint32_t pWidth = 0;
  float dist_cm = 0.0;

  // Start the timer
  HAL_TIM_IC_Start(&htim4, TIM_CHANNEL_1);

  while (1)
  {
      // 1. Send Trigger Pulse
      HAL_GPIO_WritePin(GPIOD, GPIO_PIN_11, GPIO_PIN_SET);
      // Simple delay loop for ~10us
      for(int k=0; k<100; k++) __NOP();
      HAL_GPIO_WritePin(GPIOD, GPIO_PIN_11, GPIO_PIN_RESET);

      // 2. Wait for Rising Edge (Start of Echo)
      // We look for the flag CC1OF (Capture Compare 1 overcapture flag) or CC1IF
      __HAL_TIM_SET_COUNTER(&htim4, 0); // Reset counter to 0
      __HAL_TIM_SET_CAPTUREPOLARITY(&htim4, TIM_CHANNEL_1, TIM_INPUTCHANNELPOLARITY_RISING);

      // Clear flags
      __HAL_TIM_CLEAR_FLAG(&htim4, TIM_FLAG_CC1);

      // Wait for the Rising Edge (Timeout 100ms)
      if(HAL_TIM_PollForEvent(&htim4, TIM_EVENTSOURCE_CC1, 100) == HAL_OK)
      {
          val1 = HAL_TIM_ReadCapturedValue(&htim4, TIM_CHANNEL_1);

          // 3. Switch to Falling Edge
          __HAL_TIM_SET_CAPTUREPOLARITY(&htim4, TIM_CHANNEL_1, TIM_INPUTCHANNELPOLARITY_FALLING);
          __HAL_TIM_CLEAR_FLAG(&htim4, TIM_FLAG_CC1);

          // 4. Wait for Falling Edge (End of Echo)
          if(HAL_TIM_PollForEvent(&htim4, TIM_EVENTSOURCE_CC1, 100) == HAL_OK)
          {
              val2 = HAL_TIM_ReadCapturedValue(&htim4, TIM_CHANNEL_1);

              // 5. Calculate Distance
              if (val2 > val1) pWidth = val2 - val1;
              else pWidth = (0xFFFF - val1) + val2;

              dist_cm = pWidth * 0.0343 / 2.0;

              // Print Success
              sprintf(uart_msg, "Raw: %lu, Dist: %.2f cm\r\n", pWidth, dist_cm);
              HAL_UART_Transmit(&huart3, (uint8_t*)uart_msg, strlen(uart_msg), 100);
          }
          else
          {
              HAL_UART_Transmit(&huart3, (uint8_t*)"Timeout waiting for Falling Edge\r\n", 34, 100);
          }
      }
      else
      {
          HAL_UART_Transmit(&huart3, (uint8_t*)"Timeout waiting for Rising Edge (Check Wiring)\r\n", 48, 100);
      }

      // Small delay before next reading
      HAL_Delay(200);
  }
}
/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /** Configure the main internal regulator output voltage
  */
  __HAL_RCC_PWR_CLK_ENABLE();
  __HAL_PWR_VOLTAGESCALING_CONFIG(PWR_REGULATOR_VOLTAGE_SCALE3);

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSI;
  RCC_OscInitStruct.HSIState = RCC_HSI_ON;
  RCC_OscInitStruct.HSICalibrationValue = RCC_HSICALIBRATION_DEFAULT;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_ON;
  RCC_OscInitStruct.PLL.PLLSource = RCC_PLLSOURCE_HSI;
  RCC_OscInitStruct.PLL.PLLM = 16;
  RCC_OscInitStruct.PLL.PLLN = 336;
  RCC_OscInitStruct.PLL.PLLP = RCC_PLLP_DIV4;
  RCC_OscInitStruct.PLL.PLLQ = 2;
  RCC_OscInitStruct.PLL.PLLR = 2;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_PLLCLK;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV2;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV1;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_2) != HAL_OK)
  {
    Error_Handler();
  }
}

